<%= turbo_stream.update("orgs_list") do %>
<ul id="list">
  <% @organizations.each_with_index do |element, eid| %>
    <li 
      onclick="Map.toggleDesc(<%= eid %>)"
      class="org"
      id="<%= "org-#{eid}" %>"
    >
      <div class="org-element">  
        <div class="srv-header"><h3><%= element['name'] %></h3><i class="fas fa-<%= element['icon'].present? ? element['icon'] : 'org' %>"></i></div>
        <div class="srv-body">
          <div class="row"><h4><%= "#{element['otype']} - #{element['tipo_centro']}" %></h4></div>
          <div class="row"><i class="fas fa-location-dot"></i><span><%= "#{element['region']}, #{element['address']}"%></span></div>
          <div class="row"><i class="fas fa-phone"></i><span><%= element['phone']%></span></div>
          <div class="row"><i class="fas fa-link"></i><span><%= element['website']%></span></div>
          <div class="row"><i class="fas fa-envelope"></i><span><%= element['email']%></span></div>
          <div class="row"><i class="fas fa-users"></i><span><%= element['subject_id']%></span></div>
          <div class="row"><p><%= element['description'].html_safe %></p></div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<% end %>