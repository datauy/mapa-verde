<!-- remove placeholders -->
<%= turbo_stream.remove("articles_placeholder") %>
<!-- append @articles to the #article_list turbo_frame -->
<%= turbo_stream.update("resources-list") do %>
    <%= render @resources %>
<% end %>
<!-- update the pagination turbo_frame with the current pagination offset -->
<%= turbo_stream.update "pagination" do %>
  <% if @pagy.prev %>
    <%= link_to "Anterior", resources_url(page: @pagy.prev), data: { turbo_stream: true }, class: "bg-white rounded px-6 py-3 border border-black shadow" %>
  <% end %>
  <% if @pagy.next %>
    <%= link_to "Siguiente", resources_url(page: @pagy.next), data: { turbo_stream: true }, class: "bg-white rounded px-6 py-3 border border-black shadow" %>
  <% end %> 
  <p class="text-center mt-8 text-gray-500"><%== pagy_info @pagy %></p>
<% end %> 